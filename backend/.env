# Pegasus Backend Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://pegasus_user:pegasus_password@localhost:5432/pegasus_db

# Audio Storage
AUDIO_STORAGE_PATH=./audio_files
MAX_FILE_SIZE_MB=100

# Transcription Settings
TRANSCRIPTION_ENGINE=whisper  # or "deepgram"
WHISPER_MODEL=medium  # tiny, base, small, medium, large
WHISPER_DEVICE=cuda  # or "cuda" if you have GPU support

# Deepgram API (optional - only needed if using Deepgram)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Ollama Settings
OLLAMA_MODEL=gemma3:12b  # or llama3, mistral, etc.
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60

# Security
MAX_UPLOAD_SIZE_BYTES=104857600  # 100MB in bytes